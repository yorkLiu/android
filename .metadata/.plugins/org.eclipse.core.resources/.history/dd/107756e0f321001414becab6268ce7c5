package com.demo.sqlitedemo;

import java.util.Date;

import android.database.sqlite.SQLiteDatabase;

public class MyTableOperation {
	
	private SQLiteDatabase db = null;
	
	/**table named person**/
	private static final String TABLE_PERSON = "Person";
	
	public MyTableOperation(SQLiteDatabase db) {
		this.db = db;
	}
	
	public void insert(String name, Date birthday){
		String sql = "INSERT INTO " + TABLE_PERSON + " (name, birthday) values("+
					  name+", "+birthday+")";
	}
	
	public void update(Integer id, String name, Date birthday){
		String sql = "UPDATE " + TABLE_PERSON 
					+ " SET name='"+name + "', "
					+ "birthday = '" + birthday + "'";
	}
	

}
