<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TextView 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:text="@string/spinner_title" />
	
	<!-- 第一种创建方式 直接创建，adater以及数据都在xml方件中 -->
	<Spinner 
	    android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:prompt="@string/spinner_city_title"
		android:entries="@array/city_labes" 
		/>
	
	<!-- 第二种创建方式 通过程序设置该spinner的adater以及adapter的样式 -->
	<Spinner 
	    android:id="@+id/color_spinner"
	    android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		/>
	
	<!-- 第三种创建方式 所有的数据都在程序中创建 -->
	<Spinner 
	    android:id="@+id/edu_spinner"
	    android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		/>
</LinearLayout>
