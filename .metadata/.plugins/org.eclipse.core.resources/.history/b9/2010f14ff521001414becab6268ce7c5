package com.demo.sqlitedemo;

import java.util.Date;

import android.database.sqlite.SQLiteDatabase;

public class MyTableOperation {
	
	private SQLiteDatabase db = null;
	
	/**table named person**/
	private static final String TABLE_PERSON = "Person";
	
	public MyTableOperation(SQLiteDatabase db) {
		this.db = db;
	}
	
	public void insert(String name, String birthday){
		String sql = "INSERT INTO " + TABLE_PERSON + " (name, birthday) values('"+
					  name+"', '"+birthday+"')";
		this.db.execSQL(sql);
		this.db.close();
	}
	
	public void update(Integer id, String name, String birthday){
		String sql = "UPDATE " + TABLE_PERSON 
					+ " SET name='"+name + "', "
					+ "birthday = '" + birthday + "' "
					+ "WHERE id=" + id;
		
		System.out.println("Update SQL: " + sql);
		this.db.execSQL(sql);
		this.db.close();
		
	}
	
	public void delete(Integer id){
		String sql = "DELETE FROM " + TABLE_PERSON + " WHERE id=" + id;
		this.db.execSQL(sql);
		this.db.close();
	}
	

}
